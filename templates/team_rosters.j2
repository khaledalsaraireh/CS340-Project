<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Fantasy Football Manager</title>
      <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='styles.css') }}">
      <meta>
   </head>
   <body>
      <header>
         <h1>Fantasy Football Manager</h1>
      </header>
      <nav>
         <a href="/">Home</a>
         <a href="/players">Players</a>
         <a href="/teams">Teams</a>
         <a href="/team_owners">Team Owners</a>
         <a href="/leagues">Leagues</a>
         <a href="/matches">Matches</a>
         <a href="/team_rosters">Players in Teams</a>
      </nav>
      <main>
        <section>
         <form action="/add_roster" method="GET">
            <button class="addnew">Add Player To Team</button>
          </form>
        </section>
        <section>
         <h2>Players in Teams Data</h2>
         <table>
            <thead>
               <th>Player In Team ID</th>
               <th>Team Name</th>
               <th>Player Name</th>
               <th>Player Active On Team</th>
               <th>Edit</th>
               <th>Delete</th>
            </thead>
            {% if data %}
            {% for entry in data %}
               <tr>
                  <td>{{entry.playerTeamStatusID}}</td>
                  <td>{{entry.teamName}}</td>
                  <td>{{entry.name}}</td>
                  <td>{{"False" if not entry.playerActiveOnTeam else "True"}}</td>
                  <td><a href="update_roster/{{entry.playerTeamStatusID}}" class="btn btn-default">Edit</a></td>
                  <td><a href="delete_playerInTeam/{{entry.playerTeamStatusID}}" class="btn btn-default">Delete</a></td>
               </tr>
            {% endfor %}
            {% endif %}
        </table>
      </main>
      <footer>
         <p>&copy; 2024 </p>
      </footer>
   </body>
</html>