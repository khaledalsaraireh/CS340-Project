<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Fantasy Football Manager</title>
      <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='styles.css') }}">
      <meta>
   </head>
   <body>
      <header>
         <h1>Fantasy Football Manager</h1>
      </header>
      <nav>
         <a href="/">Home</a>
         <a href="players">Players</a>
         <a href="teams">Teams</a>
         <a href="team_owners">Team Owners</a>
         <a href="leagues">Leagues</a>
         <a href="matches">Matches</a>
         <a href="team_rosters">Players in Teams</a>
      </nav>
      <main>
         <section>
            <form action="/add_team_owner" method="GET">
               <button class="addnew">Add Team Owner</button>
            </form>
        </section>
        <section>
         <h1>Team Owners Data</h1>
         <table>
            <thead>
               <th>Team Owner ID</th>
               <th>User Name</th>
               <th>Email</th>
               <th>Date Of Birth</th>
               <th>Edit</th>
               <th>Delete</th>
            </thead>
            {% if team_owners_data %}
            {% for owner in team_owners_data%}
            <tr>
               {% for key in owner%}
               <td>{{ owner[key] }}</td>
               {% endfor %}
               <td><a href="/update_owner/{{owner.teamOwnerID}}" class="btn btn-default">Edit</a></td>
               <td><a href="/delete_owner/{{owner.teamOwnerID}}" class="btn btn-default">Delete</a></td>
            {% endfor %}
            </tr>
            {% endif %}
        </table> 
      </section>
   </main>
   <footer>
      <p>&copy; 2024 </p>
   </footer>
   </body>
</html>