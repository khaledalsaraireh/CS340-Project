      <main>
         <section>
            <h2>Add Team Owner</h2>
                <form action="" method="POST">
                     <fieldset>
                        <legend>Team Owner Info</legend>
                        <label for="name">User Name</label>
                        <input type="text" name="userName" id="userName" placeholder="User Name" required>
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" placeholder="Email" required>
                        <label for="dateOfBirth">Date of Birth</label>
                        <input type="date" name="dateOfBirth" id="dateOfBirth">
                     </fieldset>
                  <button>Add Team Owner</button>
                </form>
        </section>
        <section>
         <h2>Update Team Owner</h2>
         <form action="" method="POST">
               <fieldset>
                  <legend>Team Owner Info</legend>
                  <label for="teamOwnerID">Team Owner ID</label>
                  <input type="number" name="teamOwnerID" id="teamOwnerID" placeholder="Team Owner ID" required>
                  <label for="name">User Name</label>
                  <input type="text" name="userName" id="userName" placeholder="User Name" required>
                  <label for="email">Email</label>
                  <input type="email" name="email" id="email" placeholder="Email" required>
                  <label for="dateOfBirth">Date of Birth</label>
                  <input type="date" name="dateOfBirth" id="dateOfBirth">
               </fieldset>
            <button>Submit Update</button>
          </form>
        </section>
